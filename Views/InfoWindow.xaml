<UserControl x:Class="ITSupportToolGUI.Views.InfoWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ITSupportToolGUI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <DropShadowEffect x:Key="CardShadowEffect" ShadowDepth="1" Color="#CCCCCC" Opacity="0.3" BlurRadius="5"/>
    </UserControl.Resources>
    <Grid Background="#7F000000" Visibility="{Binding IsVisible, Converter={StaticResource BoolToVis}}">
        <Border Background="White" CornerRadius="5" BorderBrush="#CCCCCC" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                MaxWidth="600" MaxHeight="500"
                Effect="{StaticResource CardShadowEffect}">
            <DockPanel>
                <Grid DockPanel.Dock="Top" Background="#0E447F">
                    <TextBlock Text="{Binding Title}" Foreground="White" FontSize="16" FontWeight="Bold"
                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,5"/>
                    <Button Content="X" Command="{Binding CloseCommand}"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            FontWeight="Bold" FontSize="16" Margin="0,0,10,0"/>
                </Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ContentPresenter Content="{Binding Content}" Margin="10"/>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
